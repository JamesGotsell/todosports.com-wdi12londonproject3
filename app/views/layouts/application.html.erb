<!DOCTYPE html>
<html>
<head>
  <title>Todosport</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <script type="text/javascript">
    var EVENTFUL_API_KEY = "<%= ENV['EVENTFUL_API_KEY'] %>";
  </script>
  <%= javascript_include_tag "lib/require", "data-main" => asset_url("application.js") %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <ul>
      <!--  i need to add a basic nav bar -->
      <li><a href="/#">Home</a></li>
      <li><a href="/#about">About</a></li>

      <% if user_signed_in? %>
      <li><a href="/#events">Events</a></li>
      <li><a href="/#myevents">My Events</a></li>
        <% if current_user.picture.present? %>
          <li class="nav-link" id="user_profile">
            <%= image_tag current_user.picture.thumb.url  %>
          </li>
        <% end %>
      <li>
        <%= link_to 'Edit', edit_user_registration_path %> <!-- user profile page -->
      </li>
      <li>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
      </li>
      <% else %>
      <li>
        <%= link_to 'Login', new_user_session_path  %>  
      </li>
      <li>
        <%= link_to 'Register', new_user_registration_path  %>  
      </li>
      <% end %>
    </ul>
  </nav>

  <%if user_signed_in? %>
  <%end%>

  <%=yield%>

  <footer>
  </footer>
</body>
</html>
