      <% if user_signed_in? %>
    </li>
    <li>
      <%= link_to 'Edit', edit_user_registration_path %> <!-- user profile page -->
    </li>
    <li>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
